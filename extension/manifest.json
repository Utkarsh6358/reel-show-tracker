{
  "manifest_version": 3,
  "name": "Reel Show Tracker",
  "version": "1.0",
  "description": "Extracts Instagram reel caption and sends to backend.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
  {
    "matches": [
      "https://www.instagram.com/reel/*",
      "https://www.instagram.com/reels/*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
]

}
